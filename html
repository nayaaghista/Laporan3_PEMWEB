  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Custom JS -->
  <script>
    document.getElementById('praktikumForm').addEventListener('submit', function (e) {
      e.preventDefault();

      const alertContainer = document.getElementById('alertContainer');
      alertContainer.innerHTML = '';

      const nama = document.getElementById('inputName').value.trim();
      const nim = document.getElementById('inputNIM').value.trim();
      const asal = document.getElementById('inputAsal').value.trim();
      const dosen = document.getElementById('selectDosen').value;
      const tanggal = document.getElementById('inputTanggalLahir').value;
      const teman = document.getElementById('inputTemanFavorit').value.trim();
      const ai = document.getElementById('inputAiFavorit').value.trim();

      let valid = true;
      //membuat alert ketika kolom belum terisi
      if (!nama) {
        showAlert('Nama belum diisi.', 'danger');
        valid = false;
      }
      if (!nim) {
        showAlert('NIM belum diisi.', 'danger');
        valid = false;
      }
      if (!asal) {
        showAlert('Asal belum diisi.', 'danger');
        valid = false;
      }
      if (!dosen) {
        showAlert('Dosen favorit belum dipilih.', 'danger');
        valid = false;
      }
      if (!tanggal) {
        showAlert('Tanggal lahir belum dipilih.', 'danger');
        valid = false;
      }
      if (!teman) {
        showAlert('Nama teman favorit belum diisi.', 'danger');
        valid = false;
      }
      if (!ai) {
        showAlert('AI favorit belum diisi.', 'danger');
        valid = false;
      }

      if (!valid) return;

      //menampilkan semua info apa saja yang telah divalidasi sebelumnya
      showAlert(`Nama: ${nama}`, 'info');
      showAlert(`NIM : ${nim}`, 'info');
      showAlert(`Asal: ${asal}`, 'info');
      showAlert(`Dosen Favorite: ${dosen}`, 'info');
      showAlert(`Tanggal lahir: ${tanggal}`, 'info');
      showAlert(`Teman Favorit: ${teman}`, 'info');
      showAlert(`AI Favorit: ${ai}`, 'info');
      showAlert(`Dosen Favorit: ${dosen}`, 'info');
      showAlert('Sukses! Semua data telah dikirim.', 'success');
    });

    function showAlert(message, type) {
      const wrapper = document.createElement('div');
      wrapper.innerHTML = `
        <div class="alert alert-${type} alert-dismissible fade show" role="alert">
          ${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
        </div>
      `; //tombol untuk menutup alert nyaa
      document.getElementById('alertContainer').append(wrapper);
    }
  </script>
</body>
